
<% if @employee.blank? %>
<p>There are not any books currently in the system.</p>
<% else %>
<p>These are the current employees in our system</p>
<ul id="employees">
  <% for c in @employee %>

<li>
<%= link_to c.first_name, {:action => 'show', :id => c.id} -%>
<b> <%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b>
<b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
:confirm => "Are you sure you want to delete this item?" %></b>
</li>
<% end %>
</ul>
<% end %>
<p><%= link_to "Add new Employee", {:action => 'new' }%></p>
<p><%= link_to "Back to home", :controller => 'User',:action => 'list'%></p>

<h1>File Upload</h1>
<%=  form_tag :action => 'uploadfile',:multipart => true %>

<p><label for="upload_file">Select File</label>
<%= file_field 'upload', 'datafile' %></p>
<%= submit_tag "Upload" %>
