<h1>Add new user</h1>
<%= form_tag :action => 'create' %>
<p><label for="code">Code</label>:
<%= text_field 'user', 'code' %></p>
<p><label for="name">name</label>:
<%= text_field 'user', 'name' %></p>
<p><label for="address1">Address1</label>:
<%= text_field 'user', 'address1' %></p>
<p><label for="address2">Address2</label>:
<%= text_field 'user', 'address2' %></p>
<p><label for="city">City</label>:
<%= text_field 'user', 'city' %></p>
<p><label for="state">state</label>:
<%= text_field 'user', 'state' %></p>
<p><label for="phone1">phone1</label>:
<%= text_field 'user', 'phone1' %></p>
<div class="Sign_Form">
  <h1>Sign Up</h1>
  <%= form_for(:user, :url => {:controller => 'User', :action => 'create'}) do |f| %>
    
    <p> Email: <%= f.text_field :email%> </p>
    <p> Password: <%= f.password_field :password%></p>
    <p> Password Confirmation: <%= f.password_field :password_confirmation%> </p>
    <%= f.submit :Signup %>

  <% if @user.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @user.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
      <% end %>\
      <p><%=link_to "Back to home ",:controller =>'User',:action =>'list'%></p>
</div>