
<% if @designation.blank? %>
<p>There are no designation currently in the system.</p>
<% else %>
<p>These are the current designation in our system</p>
<ul id="designations">
  <% for c in @designation %>

<li>
<%= link_to c.name, {:action => 'show', :id => c.id} -%>
<b> <%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b>
<b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
:confirm => "Are you sure you want to delete this designation?" %></b>
</li>
<% end %>
</ul>
<% end %>
<p><%= link_to "Add new Designation", {:action => 'new' }%></p>
<p><%=link_to "Back to home",:controller =>'User',:action=>'list'%></p>