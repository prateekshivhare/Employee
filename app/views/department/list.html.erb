
<% if @department.blank? %>
<p>There are no designation currently in the system.</p>
<% else %>
<p>These are the current designation in our system</p>
<ul id="departments">
  <% for c in @department %>

<li>
<%= link_to c.name, {:action => 'show', :id => c.id} -%>
  
<p><b> <%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b></p>

<p><b><%= link_to "Delete", {:action => 'delete', :id => c.id}%></b></p>
</li>
<% end %>
</ul>
<% end %>
<p><%= link_to "Add new department", {:action => 'new' }%></p>
<p><%=link_to "Back to home",:controller=>'User',:action =>'list'%></p>